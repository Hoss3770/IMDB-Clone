<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @movie.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Trailer:</strong>
  <%= @movie.trailer %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre.try(:name)|| "Genre was deleted" %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director.try(:name)|| "Director was deleted" %>
</p>
<p>
  <strong>Actors</strong>
    <% @movie.actors.each do |actor| %>
      <p><%= actor.try(:name) || "Actor was deleted" %></p><br />
    <% end %>
  </p>

<% if admin_signed_in? %>   
  <%= link_to 'Edit', edit_movie_path(@movie) %> |
<% end %>   

<%= link_to 'Back', :back %>
  

  <%= form_for current_user.rating do |rating| %>
    <%= rating.label :rating %>
    <%= select("post", "rating", [1,2,3,4,5], {include_blank: false}) %>
    <%= rating.submit "Add Rating" %>
  <% end %> 
  




